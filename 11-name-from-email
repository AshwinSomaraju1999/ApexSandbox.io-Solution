public String nameFromEmail(String email) {
    String FirstName;
    String FirstNameFinal;
    String LastNamefinal;
    String LastName;
    String FullName;
    FirstName = email.substringBefore('.');
    FirstNameFinal = FirstName.capitalize();
    LastName = email.substringBetween('.','@');
    LastNamefinal = LastName.capitalize();
    FullName = FirstNameFinal + ' ' +LastNamefinal;
    return FullName;
}
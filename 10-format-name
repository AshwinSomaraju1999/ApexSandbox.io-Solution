public String formatName(String firstName, String lastName) {
    String name;
    if(!firstName.is() && !lastName.isEmpty()){
        name = lastName + ', '+firstName;
    }
    else if(!firstName.isEmpty() && lastName.isEmpty()){
        name = firstName;
    }
    else if(firstName.isEmpty() && !lastName.isEmpty()){
        name = lastName;
    }
    else{
        name = '';
    }
    return name;
}
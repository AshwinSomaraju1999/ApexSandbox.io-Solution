public String changeTimeFormat(String strTime) {
    String hrtime;
    String mintime;
    String finalTime;

    hrtime = strTime.substringBefore(':');
    mintime = strTime.substringAfter(':');
    if(Integer.valueof(hrtime)<12){
        finalTime = strTime + 'AM';
    }
    else{
        finalTime = String.valueof(Integer.valueof(hrtime)-12) + mintime + 'PM';
    }
    return finalTime;
}